.post {
  position: relative;
  padding: 0 15px 15px;
  border-radius: 0;
  background-color: #fff;
  box-shadow: 0px 1px 4px rgba(0,0,0,0.2);
  margin-bottom: 20px;
}

.index-page .post {
  padding: 15px;
}

.post:before,
.post:after {
  content: " ";
  display: table;
}


.post__author {
  display: none;
}

.post__footer {
  margin-bottom: 20px;
  padding-top: 15px;
  padding: 15px 14px 0;
  line-height: 54px;
  font-size: 13px;
  color: #868E95;
}

.post__footer__meta {
  margin-top: -8px;
}

.post__footer__meta__tags .tag {
  color: #868E95;
}

.post__image {
  min-width: -webkit-calc(100% + 30px);
  min-width: -moz-calc(100% + 30px);
  min-width: calc(100% + 30px);
  margin-left: -15px;
}

.post__singleLink
  text-align center
  padding-top 20px

/* Desktop  */

@media (min-width: 800px) {
  .post {
    padding: 0 40px 20px 45px;
    border-radius: 4px;
  }

  .post__author {
    position: absolute;
    top: 20px;
    left: -35px;
    display: block;
  }

  .post__author__avatar {
    display: inline-block;
    margin-right: 15px;
    background: #fff;
    overflow: hidden;
  }

  .post__cta {
    display: table;
    width: 100%;
    margin-top: 40px;
    padding-top: 25px;
  }
}
