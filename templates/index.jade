extends page

block post
  .hero
    h1 Imperial Department of Computing Society
    .summary
      p
        | We run multiple events throughout the year, including several coding challenges 
        | and an annual 
        a(href="http://www.ichack.org" target="_blank") hackathon
        | .
        | We invite notable tech speakers, connect our students with different opportunities  
        | and run a number of social events to bring together the community of students who are interested in Computing.
        | &nbsp;
        a(href="mailto:docsoc@imperial.ac.uk") Say hi.
    .links
      p
        .social 
          iframe(class="facebook-follow-button" 
                 src="http://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2FICDocSoc&width&layout=button_count&action=recommend&show_faces=false&share=false&height=21" 
                 scrolling="no" 
                 frameborder="0" 
                 style="border:none; overflow:hidden; height:21px;" 
                 allowTransparency="true")

        .social
          a(href="https://twitter.com/icdocsoc", 
            class="twitter-follow-button", 
            data-show-count="true", 
            data-lang="en") Follow @ICDoCSoc
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    .cf
    .container
      .upcoming-events
        h2 What's Going on
        .thirds-container
            iframe(name='eventFrame', src='http://www.fanrx.com/facebook/events.php?theme=zuck&page=ICDocSoc&bgcolor=ffffff&textcolor=000000&linkcolor=555555&max=5', style='height: 250px; width: 100%;', frameborder='no', scrolling='auto')

        .thirds-container.two-thirds.last-item
            a.twitter-timeline(href='https://twitter.com/ICDoCSoc', data-widget-id='398125526008614914', data-chrome='nofooter noheader ') Tweets by @ICDoCSoc
              script.
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
        
    .u-cf

  .thirds-container
    .thirds-inner
      .recent-posts
        h2 Recent Posts
        include recent-posts
        mixin recent_posts()

