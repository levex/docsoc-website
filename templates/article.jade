extends layout

block prepend title
  | #{ page.title } -

block content
  include author
  section#content
    article.post
      mixin author_avatar(page.metadata.author)
      h1= page.title
        small
          br
          mixin author_info(page.metadata.author)
          | ,
          | &nbsp;
          = moment(page.date).format('D MMMM YYYY')
      hr
      section.content!= page.html
    a(name='comment')
    include comments
